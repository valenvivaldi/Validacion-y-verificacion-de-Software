
VECINO1=(
		flag1.setTrue->(
			when(flag2.[True]) -> flag1.setFalse ->VECINO1
			|when(flag2.[False])-> recojeMoras1 ->flag1.setFalse->VECINO1
		)
		 

).

VECINO2=(
		flag2.setTrue->(
			when(flag1.[True]) -> flag2.setFalse ->VECINO2
			|when(flag1.[False])-> recojeMoras2 ->flag2.setFalse->VECINO2
		).
